        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:fontFamily="@font/mblack"
        android:gravity="center"
        android:textColor="#FFF"
        android:textSize="30sp" />


</LinearLayout>